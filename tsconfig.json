{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "types": ["element-plus/global"],
    "paths": {
      "@/*":["src/*"]
    }
  },
  "include": ["src","src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"],
//  "exclude": ["src/pages/*.vue"],, "src/**/*.vue"
  "references": [{ "path": "./tsconfig.node.json" }]
}
